<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/background1"
    tools:context=".MealPlanActivity">

    <TextView
        android:id="@+id/textViewMealPlanTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plan Alimentar"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="center"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:contentDescription="Plan alimentar pentru fiecare zi și masa">

        <LinearLayout
            android:id="@+id/linearLayoutMealPlanDynamic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewBreakfast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mic dejun:"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/textViewLunch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prânz:"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/textViewDinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cină:"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/textViewSnack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Snack:"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="8dp"/>


        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/buttonOpenShoppingList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lista de cumparaturi"
        android:layout_marginTop="16dp"
        android:onClick="openShoppingList" />


    <Button
        android:id="@+id/buttonBackToUserPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Înapoi la Pagina Utilizatorului"
        android:layout_gravity="center"
        android:onClick="navigateBackToUserPage"/>


</LinearLayout>
